@model Models.Tags.TagViewModel
@{
    Layout = null;
    var title = "Add new Tag";
    var buttonSubmit = "Save";
    if (Model.InfoTag.Id != 0)
    {
        title = "Edit Tag";
        buttonSubmit = "Update";

    }
    ViewData["Title"] = "Edit";
    Layout = null;
}

    <style>
        .modal-dialog {
            max-width: 500px;
            margin: auto;
        }

        #modal-del-editor {
            max-width: 500px;
            margin: 1.75rem auto;
        }
    </style>

    <!-- Modal 1111-->
    <div class="modal fade" id="modal-id" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" style="margin-top:40px;" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="addContactLabel">@title</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div data-url-refresh="/administrator/Tag/TagEditor/@Model.InfoTag.Id">
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row">
                                <form id="frmAdd" action="/administrator/Tag/TagEditor" method="post" style="width: 100%;">
                                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                                    <input name="InfoTag.Id" value="@Html.DisplayFor(model=>model.InfoTag.Id)" id="ed-edit" type="text" hidden />
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label required">Tag Name</label>
                                                <div class="col-sm-8">
                                                    <input type="text" id="title-val" required value="@Html.DisplayFor(model=>model.InfoTag.Name)" name="InfoTag.Name" class="form-control">
                                                    <span class="field-validation-error text-danger"
                                                          data-valmsg-for="InfoTag.Name"
                                                          data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="clearfix form-actions submit-buttons text-center">
                                            <button type="button" class="btn btn-outline btn-danger" data-dismiss="modal">Close</button>
                                            <button class="btn btn-success" id="edit-cate" type="button" onclick="savePopupForm()">
                                                <i class="fa fa-save"></i>
                                                @buttonSubmit
                                            </button>
                                            <button class="btn" onclick="location.href = window.location.href;" type="reset">
                                                <i class="fa fa-undo"></i>
                                                Reset
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>







@model Models.User.UserViewModel
@{
    Layout = null;
    var title = "Add new User";
    var buttonSubmit = "Save";
    if (Model.InfoUser.Id != 0)
    {
        title = "Edit User";
        buttonSubmit = "Update";

    }


    ViewData["Title"] = "Edit";
    Layout = null;
    var active = "";
    var inactive = "";
    if (Model.InfoUser.Status == 1)
    {
        active = "selected";
    }
    else if (Model.InfoUser.Status == null)
    {
        active = "selected";
    }
    else
    {
        inactive = "selected";
    }

}

<style>
    .modal-dialog {
        max-width: 1000px;
        margin: auto;
    }

    #modal-del-editor {
        max-width: 500px;
        margin: 1.75rem auto;
    }
</style>

<!-- Modal 1111-->
<div class="modal fade" id="modal-id" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" style="margin-top:40px;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="addContactLabel">@title</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div data-url-refresh="/administrator/User/UserEditor/@Model.InfoUser.Id">
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <form id="frmAdd" action="/administrator/User/UserEditor" method="post">
                                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                                <input name="InfoUser.Id" value="@Html.DisplayFor(model=>model.InfoUser.Id)" id="ed-edit" type="text" hidden />
                                @*<input asp-for="InfoCategory.ParentId" type="text" hidden />
                                    <input asp-for="InfoCategory.Name" type="hidden" />
                                    <input asp-for="InfoCategory.KeyName" type="hidden" />*@
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label required">User Name</label>
                                            <div class="col-sm-8">
                                                <input type="text" id="title-val" required value="@Html.DisplayFor(model=>model.InfoUser.UserName)" name="InfoUser.UserName" class="form-control">
                                                <span class="field-validation-error text-danger"
                                                      data-valmsg-for="InfoUser.UserName"
                                                      data-valmsg-replace="true"></span>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Password</label>
                                            <div class="col-sm-10">
                                                <input type="password" value="@Html.DisplayFor(model=>model.InfoUser.Password)" name="InfoUser.Password" class="form-control">
                                                <span class="field-validation-error text-danger"
                                                      data-valmsg-for="InfoUser.Password"
                                                      data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label required">First Name</label>
                                            <div class="col-sm-8">
                                                <input type="text" id="title-val" required value="@Html.DisplayFor(model=>model.InfoUser.FirstName)" name="InfoUser.FirstName" class="form-control">
                                                <span class="field-validation-error text-danger"
                                                      data-valmsg-for="InfoUser.FirstName"
                                                      data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">LastName</label>
                                            <div class="col-sm-10">
                                                <input type="text" value="@Html.DisplayFor(model=>model.InfoUser.LastName)" name="InfoUser.LastName" class="form-control">
                                                <span class="field-validation-error text-danger"
                                                      data-valmsg-for="InfoUser.LastName"
                                                      data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 none">
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label">Status</label>
                                            <div class="col-sm-8">
                                                <select class="form-control" name="InfoUser.Status">
                                                    <option @active value="active">Active</option>
                                                    <option @inactive value="inactive">InActive</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <div class="clearfix form-actions submit-buttons text-center">
                                        <button type="button" class="btn btn-outline btn-danger" data-dismiss="modal">Close</button>
                                        <button class="btn btn-success" id="edit-cate" type="button" onclick="savePopupForm()">
                                            <i class="fa fa-save"></i>
                                            @buttonSubmit
                                        </button>
                                        <button class="btn" onclick="location.href = window.location.href;" type="reset">
                                            <i class="fa fa-undo"></i>
                                            Reset
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






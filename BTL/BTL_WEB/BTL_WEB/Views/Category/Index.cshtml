@model Models.FECategory.FECategoryModel
@using BTL_WEB.Constant;
@{
    var pageInfo = ViewData["PageInfo"] as Models.Layout.GetForLayout;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="page-header-bg" style="background-image: url('@Model.CategoryDetail.Image');" data-stellar-background-ratio="0.5"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-1 col-md-10 text-center">
                <h1 class="text-uppercase">@Model.CategoryDetail.Title</h1>
            </div>
        </div>
    </div>
</div>
<!-- /HEADER -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-8">
                <!-- post -->
                <div class="post post-thumb">
                    <a class="post-img" href="/@Constant.para.News/@Model.PostByCategory[0].Url"><img src="@Model.PostByCategory[0].Image" alt=""></a>
                    <div class="post-body">
                        <div class="post-category">
                            <a href="/Category/@Model.PostByCategory[0].UrlCate">@Model.PostByCategory[0].NameCate</a>
                        </div>
                        <h3 class="post-title title-lg"><a href="/@Constant.para.News/@Model.PostByCategory[0].Url">@Model.PostByCategory[0].Title</a></h3>
                        <ul class="post-meta">
                            <li><a href="author.html">Admin</a></li>
                            <li>@Model.PostByCategory[0].UpdatedDate</li>
                        </ul>
                    </div>
                </div>
                <!-- /post -->

                <div class="row">

                    <!-- /post -->
                    <div class="clearfix visible-md visible-lg"></div>
                    @if (Model.PostByCategory.Count > 3)
                    {
                        for (var i = 1; i < 3; i++)
                        {
                            <div class="col-md-6">
                                <div class="post">
                                    <a class="post-img" href="/@Constant.para.News/@Model.PostByCategory[i].Url"><img src="@Model.PostByCategory[i].Image" alt=""></a>
                                    <div class="post-body">
                                        <div class="post-category">
                                            <a href="category.html">@Model.PostByCategory[i].NameCate</a>
                                        </div>
                                        <h3 class="post-title"><a href="/@Constant.para.News/@Model.PostByCategory[i].Url">@Model.PostByCategory[i].Title</a></h3>
                                        <ul class="post-meta">
                                            <li><a href="author.html">Admin</a></li>
                                            <li>@Model.PostByCategory[i].UpdatedDate</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    @if (Model.PostByCategory.Count > 4)
                    {
                        for (var i = 3; i < 5; i++)
                        {
                            <div class="col-md-6">
                                <div class="post">
                                    <a class="post-img" href="/@Constant.para.News/@Model.PostByCategory[i].Url"><img src="@Model.PostByCategory[i].Image" alt=""></a>
                                    <div class="post-body">
                                        <div class="post-category">
                                            <a href="/Category/@Model.PostByCategory[i].UrlCate">@Model.PostByCategory[i].NameCate</a>
                                        </div>
                                        <h3 class="post-title"><a href="/@Constant.para.News/@Model.PostByCategory[i].Url">@Model.PostByCategory[i].Title</a></h3>
                                        <ul class="post-meta">
                                            <li><a href="#">Admin</a></li>
                                            <li>@Model.PostByCategory[i].UpdatedDate</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    <!-- post -->

                </div>

                <!-- post -->
                @if (Model.PostByCategory.Count >= 5)
                {
                    for (var i = 4; i < Model.PostByCategory.Count; i++)
                    {
                        <div class="post post-row">
                            <a class="post-img" href="/@Constant.para.News/@Model.PostByCategory[i].Url"><img src="@Model.PostByCategory[i].Image" alt=""></a>
                            <div class="post-body">
                                <div class="post-category">
                                    <a href="/Category/@Model.PostByCategory[i].UrlCate">@Model.PostByCategory[i].NameCate</a>
                    
                                </div>
                                <h3 class="post-title"><a href="/@Constant.para.News/@Model.PostByCategory[i].Url">@Model.PostByCategory[i].Title</a></h3>
                                <ul class="post-meta">
                                    <li><a href="#">Admin</a></li>
                                    <li>@Model.PostByCategory[i].UpdatedDate</li>
                                </ul>
                                <p>@Model.PostByCategory[i].Description...</p>
                            </div>
                        </div>
                    }
                }

                <!-- /post -->  
            </div>

            <div class="col-md-4">
                <!-- ad widget-->
                <div class="aside-widget text-center">
                    <a href="#" style="display: inline-block;margin: auto;">
                        <img class="img-responsive" src="./img/ad-3.jpg" alt="">
                    </a>
                </div>
                <!-- /ad widget -->
                <!-- social widget -->
                <div class="aside-widget">
                    <div class="section-title">
                        <h2 class="title">Social Media</h2>
                    </div>
                    <div class="social-widget">
                        <ul>
                            <li>
                                <a href="#" class="social-facebook">
                                    <i class="fa fa-facebook"></i>
                                    <span>21.2K<br>Followers</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="social-twitter">
                                    <i class="fa fa-twitter"></i>
                                    <span>10.2K<br>Followers</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="social-google-plus">
                                    <i class="fa fa-google-plus"></i>
                                    <span>5K<br>Followers</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /social widget -->
                <!-- category widget -->
                <div class="aside-widget">
                    <div class="section-title">
                        <h2 class="title">Categories</h2>
                    </div>
                    <div class="category-widget">
                        <ul>
                            @foreach (var item in pageInfo.InfoCategory)
                            {
                                <li><a href="/Category/@item.Url">@item.Title <span>@item.TotalPost</span></a></li>
                            }
                        </ul>
                    </div>
                </div>
                <!-- /category widget -->
                <!-- newsletter widget -->
                <div class="aside-widget">
                    <div class="section-title">
                        <h2 class="title">Newsletter</h2>
                    </div>
                    <div class="newsletter-widget">
                        <form>
                            <p>Nec feugiat nisl pretium fusce id velit ut tortor pretium.</p>
                            <input class="input" name="newsletter" placeholder="Enter Your Email">
                            <button class="primary-button">Subscribe</button>
                        </form>
                    </div>
                </div>
                <!-- /newsletter widget -->
                <!-- post widget -->
                <div class="aside-widget">
                    <div class="section-title">
                        <h2 class="title">Popular Posts</h2>
                    </div>
                    <!-- post -->
                    @foreach (var item in pageInfo.PostPopular)
                    {
                        <div class="post post-widget">
                            <a class="post-img" href="/@Constant.para.News/@item.Url"><img src="@item.Image" alt=""></a>
                            <div class="post-body">
                                <div class="post-category">
                                    <a href="category.html">@item.NameCate</a>
                                </div>
                                <h3 class="post-title"><a href="/@Constant.para.News/@item.Url">@item.Title</a></h3>
                            </div>
                        </div>
                    }
                    <!-- /post -->
                </div>
                <!-- /post widget -->
                <!-- galery widget -->
                <div class="aside-widget">
                    <div class="section-title">
                        <h2 class="title">Instagram</h2>
                    </div>
                    <div class="galery-widget">
                        <ul>
                            <li><a href="#"><img src="./img/galery-1.jpg" alt=""></a></li>
                            <li><a href="#"><img src="./img/galery-2.jpg" alt=""></a></li>
                            <li><a href="#"><img src="./img/galery-3.jpg" alt=""></a></li>
                            <li><a href="#"><img src="./img/galery-4.jpg" alt=""></a></li>
                            <li><a href="#"><img src="./img/galery-5.jpg" alt=""></a></li>
                            <li><a href="#"><img src="./img/galery-6.jpg" alt=""></a></li>
                        </ul>
                    </div>
                </div>
                <!-- /galery widget -->
                <!-- Ad widget -->
                <div class="aside-widget text-center">
                    <a href="#" style="display: inline-block;margin: auto;">
                        <img class="img-responsive" src="./img/ad-1.jpg" alt="">
                    </a>
                </div>
                <!-- /Ad widget -->
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
